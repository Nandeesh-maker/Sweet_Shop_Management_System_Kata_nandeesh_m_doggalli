{
  "name": "sweet-shop-management-system",
  "version": "1.0.0",
  "description": "A comprehensive management system for sweet shops",
  "main": "dist/app.js",
  "scripts": {
    "dev:backend": "ts-node-dev --respawn --transpile-only src/app.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/app.js",
    "test": "jest",
    "test:frontend": "cd frontend && npm test",
    "test:coverage": "jest --coverage",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:reset": "knex migrate:rollback && knex migrate:latest && knex seed:run"
  },
  "keywords": [
    "sweet-shop",
    "management",
    "system",
    "nodejs",
    "typescript"
  ],
  "author": "Nandeesh M Doggalli",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^14.18.63",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^2.0.16",
    "jest": "^26.6.3",
    "supertest": "^6.3.4",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/sqlite3": "^5.1.0",
    "axios": "^1.13.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.4.2",
    "pg": "^8.16.3",
    "react-router-dom": "^7.9.5",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  }
}
